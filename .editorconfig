# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_size = 4
indent_style = space
max_line_length = 120
# ktlint specific rules can be added here if needed, e.g.:
# ktlint_standard_no-wildcard-imports = true
# ktlint_experimental = true

[*.java]
indent_size = 4
indent_style = space

[*.xml]
indent_size = 4
indent_style = space 