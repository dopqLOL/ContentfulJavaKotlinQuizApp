# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{kt,kts}]
indent_size = 4
# Set maximum line length (common practice is 100 or 120)
max_line_length = 100
# ktlint specific rules can be added here if needed
# Example: ktlint_standard_filename = disabled

[*.java]
indent_size = 4
indent_style = space

[*.xml]
indent_size = 4
indent_style = space 